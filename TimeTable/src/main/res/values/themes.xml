<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimeTable" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/Background</item>
        <item name="bg">@color/Background</item>
        <item name="tittleText">@color/tittleText</item>
        <item name="title_layout">@drawable/side_nav_bar</item>
        <item name="no_data">@drawable/no_data</item>
        <item name="primary_text">@color/primary_text</item>
        <item name="second_text">@color/secondary_text</item>
        <item name="second_bg">@color/second_bg</item>
    </style>

    //没有ActionBar，背景纯白，导航栏透明
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/Background</item>
        <item name="redText">@color/red</item>
        <item name="bg">@color/Background</item>
        <item name="tittleText">@color/tittleText</item>
        <item name="title_layout">@drawable/side_nav_bar</item>
        <item name="no_data">@drawable/no_data</item>
        <item name="primary_text">@color/primary_text</item>
        <item name="second_text">@color/secondary_text</item>
        <item name="second_bg">@color/second_bg</item>
    </style>
</resources>